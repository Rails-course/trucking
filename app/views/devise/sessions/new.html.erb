<div class="container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'input-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'remember-checkbox' %>
      <%= f.label :remember_me, class: 'remember' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>